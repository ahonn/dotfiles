{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "max-len": [
      2,
      {
        "code": 100,
        "tabWidth": 2,
        "ignoreUrls": true
      }
    ]
  }
}
